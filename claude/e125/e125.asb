10 REM PALINDROMIC CONSECUTIVE SQUARE SUMS
20 LM = 1E8: REM LIMIT 10^8
30 DIM P(200): REM STORE PALINDROMES (166 FOUND)
40 PC = 0: REM PALINDROME COUNT
50 TS = 0: REM TOTAL SUM
60 MS = INT(SQR(LM)): REM MAX START
70 PRINT "SEARCHING..."
80 FOR ST = 1 TO MS
90   SM = 0
100  FOR I = ST TO MS
110    SM = SM + I * I
120    IF SM >= LM THEN 200
130    IF I <= ST THEN 190
140    N = SM: GOSUB 1000: REM CHECK PALINDROME -> IP
150    IF IP = 0 THEN 190
160    GOSUB 2000: REM ADD TO LIST IF NEW
190  NEXT I
200  IF ST / 100 = INT(ST / 100) THEN PRINT "CHECKED ";ST
210 NEXT ST
220 PRINT "FOUND ";PC;" PALINDROMES"
230 PRINT "SUM = ";TS
240 PRINT "FIRST 10 EXAMPLES:"
250 FOR I = 1 TO 10
260   IF I > PC THEN 290
270   PRINT I;". ";P(I)
280 NEXT I
290 END
1000 REM SUBROUTINE: CHECK IF N IS PALINDROME -> IP
1010 IP = 0
1020 S$ = STR$(N)
1030 REM REMOVE LEADING SPACE
1040 IF LEFT$(S$,1) = " " THEN S$ = MID$(S$,2)
1050 LN = LEN(S$)
1060 FOR J = 1 TO INT(LN / 2)
1070   IF MID$(S$,J,1) <> MID$(S$,LN - J + 1,1) THEN RETURN
1080 NEXT J
1090 IP = 1
1100 RETURN
2000 REM SUBROUTINE: ADD N TO PALINDROME LIST
2010 REM CHECK IF ALREADY IN LIST
2020 FOR J = 1 TO PC
2030   IF P(J) = N THEN RETURN
2040 NEXT J
2050 REM ADD NEW PALINDROME
2060 PC = PC + 1
2070 P(PC) = N
2080 TS = TS + N
2090 RETURN