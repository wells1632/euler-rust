10  REM MIXED-COLOR TILE PROBLEM
20  PRINT "CALCULATING MIXED ARRANGEMENTS"
30  PRINT
40  DIM D(55)
50  REM SHOW PROGRESSION
60  PRINT "PROGRESSION:"
70  FOR L = 10 TO 50 STEP 10
80  GOSUB 1000
90  PRINT "N=";L;": ";W
100  NEXT L
110  PRINT
120  REM FINAL ANSWER
130  L = 50: GOSUB 1000
140  PRINT "======================================="
150  PRINT "ANSWER FOR N=50: ";W
160  PRINT "======================================="
170  END
1000  REM COUNT ARRANGEMENTS
1010  FOR I = 0 TO L:D(I) = 0: NEXT I
1020  D(0) = 1
1030  FOR I = 1 TO L
1040  D(I) = D(I - 1)
1050  IF I > = 2 THEN D(I) = D(I) + D(I - 2)
1060  IF I > = 3 THEN D(I) = D(I) + D(I - 3)
1070  IF I > = 4 THEN D(I) = D(I) + D(I - 4)
1080  NEXT I
1090  W = D(L)
1100  RETURN