10 REM BINOMIAL COEFFICIENT COUNTER
20 REM COUNT C(N,R) > 1000000 FOR 1<=N<=100
30 COUNT = 0
40 THRESHOLD = 1000000
50 FOR N = 1 TO 100
60   FOR R = 0 TO N
70     GOSUB 200: REM CALCULATE C(N,R)
80     IF RESULT > THRESHOLD THEN COUNT = COUNT + 1
90   NEXT R
100 NEXT N
110 PRINT "NUMBER OF BINOMIAL COEFFICIENTS > 1,000,000: ";COUNT
120 END
200 REM SUBROUTINE: CALCULATE BINOMIAL COEFFICIENT
210 REM INPUT: N, R
220 REM OUTPUT: RESULT
230 IF R > N THEN RESULT = 0: RETURN
240 IF R = 0 OR R = N THEN RESULT = 1: RETURN
250 REM USE SMALLER OF R AND N-R
260 RR = R
270 IF (N - R) < RR THEN RR = N - R
280 RESULT = 1
290 FOR I = 0 TO RR - 1
300   RESULT = RESULT * (N - I) / (I + 1)
310 NEXT I
320 RETURN