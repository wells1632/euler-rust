10 REM DISC GAME PROBABILITY CALCULATOR
20 REM FOR 15 TURNS
30 TN = 15
40 DIM P(16,16): REM P(TURN, BLUES)
50 REM INITIALIZE: AT START, 0 BLUES DRAWN
60 P(0,0) = 1
70 REM CALCULATE PROBABILITIES FOR EACH TURN
80 FOR T = 0 TO TN - 1
90   FOR B = 0 TO T
100     IF P(T,B) = 0 THEN 180
110     REM AT TURN T, THERE ARE T+1 REDS, 1 BLUE
120     TD = T + 2
130     PB = 1 / TD
140     PR = (T + 1) / TD
150     REM DRAW BLUE
160     P(T + 1, B + 1) = P(T + 1, B + 1) + P(T,B) * PB
170     REM DRAW RED
180     P(T + 1, B) = P(T + 1, B) + P(T,B) * PR
190   NEXT B
200 NEXT T
210 REM CALCULATE WINNING PROBABILITY
220 REM NEED MORE THAN HALF BLUES (>7.5, SO >=8)
230 WP = 0
240 FOR B = 8 TO TN
250   WP = WP + P(TN, B)
260 NEXT B
270 PRINT "WINNING PROBABILITY: "; WP
280 REM CALCULATE MAX PRIZE
290 MP = INT(1 / WP)
300 PRINT "MAXIMUM PRIZE FUND: $"; MP
310 END