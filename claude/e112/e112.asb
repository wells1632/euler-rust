10  REM FASTEST BOUNCY FINDER
20  PRINT "FINDING N WHERE BOUNCY = 99%"
30  N = 1000000
40  REM LOOP
50  REM ESTIMATE BOUNCY COUNT
60  REM ROUGH: DECREASING ~= C(DIGITS+10,10)
70  REM INCREASING ~= C(DIGITS+9,10)
80  ND = 7: REM DIGITS IN N
90  REM APPROXIMATE NON-BOUNCY
100 NB = ND * ND * 55: REM ROUGH FORMULA
110 BC = N - NB
120  REM CHECK
130  IF 100 * BC = 99 * N THEN  GOTO 500
140  IF 100 * BC < 99 * N THEN N = N + 100: GOTO 90
150  IF 100 * BC > 99 * N THEN N = N - 50: GOTO 90
500  PRINT "ANSWER: ";N
510  END